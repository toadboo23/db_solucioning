{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/index.ts",
    "src/controllers/CandidateController.ts",
    "src/services/CandidateService.ts",
    "src/middleware/auth.ts",
    "src/routes/candidates.ts",
    "shared/types/candidates.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/audit-service.ts",
    "src/auth-local.ts",
    "src/db.ts",
    "src/index-clean.ts",
    "src/routes-clean.ts",
    "src/storage-postgres.ts",
    "src/storage-postgres-fixed.ts",
    "shared/schema.ts"
  ]
} 